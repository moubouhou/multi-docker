{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
      {
        "name": "client",
        "image": "moubouhou/multi-client",
        "hostname":"client",
        "essential": false
      },
      {
        "name": "server",
        "image": "moubouhou/multi-server",
        "hostname":"api",
        "essential": false
      },
      {
        "name": "worker",
        "image": "moubouhou/multi-worker",
        "hostname":"worker",
        "essential": false
      },
      {
        "name": "nginx",
        "image": "moubouhou/multi-nginx",
        "hostname":"nginx",
        "essential": true,
        "portMappings": [
          {
            "hostPort": 80,
            "containerPort": 80
          }
        ],
        "links": [
            "client",
            "server"
        ]
      }
    ]
}